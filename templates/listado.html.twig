{% extends "base.html.twig" %}
{% block title %}Listado
{% endblock %}
{% block body %}
	{% if app.user %}
		<div class="mb-3" style="float: right;">
			Eres
			{{ app.user.userIdentifier }}
			<button class="btn btn-primary">
				<a href="{{ path('app_logout') }}">Logout</a>
			</button>
		</div>
	{% endif %}
	<h1>Listado de canciones</h1>
	<button class="btn btn-primary">
			<a href="{{ path('nueva_cancion') }}">AÃ±adir cancion +</a>
		</button>
	<ol>
		{% for cancion in canciones %}
			<hr>
			<li>
				<strong>{{cancion.autor}}: -{{cancion.nombre}}-</strong>
			</li>
			<br>
			<button class="btn btn-primary">
					<a href="canciones/{{cancion.id}}">Ficha</a>
				</button>
			<hr>
		{% endfor %}
	</ol>
{% endblock %}
