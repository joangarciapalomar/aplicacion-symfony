{% extends "base.html.twig" %}
{% block title %}Cancion
{% endblock %}
{% block body %}
	{% if app.user %}
		<div class="mb-3" style="float: right;">
			Eres
			{{ app.user.userIdentifier }}
			<button class="btn btn-primary">
				<a href="{{ path('app_logout') }}">Logout</a>
			</button>
		</div>
	{% endif %}
	<h1>CANCIÓN
	</h1>
	<ul>
		<li>
			<strong>Nombre de la canción:</strong>
			{{cancion.nombre}}.</li>
		<li>
			<strong>Autor:</strong>
			{{cancion.autor}}.</li>
		<li>
			<strong>Duración:</strong>
			{{cancion.duracion}}
			minutos.</li>
	</ul>
   {# <img src="{{ asset('images/' ~ cancion.file) }}"/><br> #}
		<button class="btn btn-primary">
			<a href="../canciones/editar/{{cancion.id}}">Editar</a>
		</button>
      <button class="btn btn-eliminar">
			<a href="../canciones/delete/{{cancion.id}}">Eliminar</a>
		</button>
      <button class="btn btn-primary">
			<a href="../canciones">Volver</a>
		</button>
{% endblock %}
